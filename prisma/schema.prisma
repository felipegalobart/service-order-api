enum TipoPessoa {
  cliente
  fornecedor
}

enum Role {
  admin
  tecnico
  atendente
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(admin)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Boolean  @default(true)
}

model ContatoPessoa {
  id         Int     @id @default(autoincrement())
  nome       String
  numero     String
  whatsapp   Boolean
  email      String?
  observacao String?
  Pessoa     Pessoa  @relation(fields: [pessoaId], references: [id])
  pessoaId   Int
}

model Pessoa {
  id                Int        @id @default(autoincrement())
  nome              String
  razaoSocial       String?
  tipo              TipoPessoa @default(cliente)
  ativo             Boolean    @default(true)
  cpf               String? // Somente números
  cnpj              String? // Somente números
  inscricaoEstadual String?
  email             String?
  logradouro        String?
  numero            String?
  bairro            String?
  cidade            String?
  estado            String?
  cep               String?
  criadoEm          DateTime   @default(now())
  atualizadoEm      DateTime   @updatedAt

  ContatoPessoa ContatoPessoa[]
}
